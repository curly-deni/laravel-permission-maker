{
    "name": "curly-deni/laravel-permission-maker",
    "description": "This is my package laravel-permission-maker",
    "keywords": [
        "Danila Mikhalev",
        "laravel",
        "laravel-permission-maker"
    ],
    "homepage": "https://github.com/curly-deni/laravel-permission-maker",
    "license": "MIT",
    "authors": [
        {
            "name": "Danila Mikhalev",
            "email": "danila@dan-mi.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-permission": "^6.17"
    },
    "require-dev": {
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Aesis\\PermissionMaker\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "post-install-cmd": [
            "@php artisan vendor:publish --provider=\"Spatie\\Permission\\PermissionServiceProvider\" --tag=\"permission-migrations\""
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aesis\\PermissionMaker\\PermissionMakerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
