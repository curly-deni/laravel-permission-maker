{
    "name": "curly-deni/laravel-permission-maker",
    "description": "Laravel package to easily generate migration files for CRUD and single permissions based on spatie/laravel-permission.",
    "keywords": ["laravel", "permissions", "spatie", "crud", "artisan", "generator", "authorization", "migration"],
    "homepage": "https://github.com/curly-deni/laravel-permission-maker",
    "license": "MIT",
    "authors": [
        {
            "name": "Danila Mikhalev",
            "email": "danila@dan-mi.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-permission": "^6.17"
    },
    "require-dev": {
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Aesis\\PermissionMaker\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aesis\\PermissionMaker\\PermissionMakerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
